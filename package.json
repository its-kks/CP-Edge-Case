{
  "name": "cp-edge-case",
  "displayName": "CP Edge Case",
  "description": "Find edge cases for CP problems",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cp-edge-case.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cp-edge-case-sidebar-view",
          "title": "CP Edge Case",
          "icon": "media/icons/activityBar.svg"
        }
      ]
    },
    "views": {
      "cp-edge-case-sidebar-view": [
        {
          "type": "webview",
          "id": "cp-edge-case-sidebar",
          "name": "CP Edge Case",
          "icon": "media/icons/activityBar.svg",
          "contextualTitle": "CP Edge Case"
        }
      ]
    },
    "configuration": {
      "title": "CP Edge Case",
      "properties": {
        "cp-edge-case.Max Execution Time": {
          "type": "number",
          "default": 5000,
          "description": "Time ( in ms ) for which a file is executed before it is killed"
        },
        "cp-edge-case.Max Memory Usage":{
          "type":"number",
          "default": 1,
          "description": "Maximum memory allocation ( in GB ) for file execution"
        },
        "cp-edge-case.Python command":{
          "type":"string",
          "default": "python",
          "description": "Command to execute python files ( python3, py )"
        },
        "cp-edge-case.CPP command": {
          "type": "string",
          "default": "g++",
          "description": "Command to compile and execute C++ files ( clang++ )"
        },
        "cp-edge-case.C command": {
          "type": "string",
          "default": "gcc",
          "description": "Command to compile and execute C files ( clang )" 
        },
        "cp-edge-case.Java command": {
          "type": "string",
          "default": "javac ${file} && java ${fileBase}",
          "description": "Command to compile and execute Java files"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/pidusage": "^2.0.5",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "pidusage": "^3.0.2",
    "react": "^18.3.1"

  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}